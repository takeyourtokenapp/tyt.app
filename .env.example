# ========================================
# TYT Platform - Environment Variables
# ========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ========================================
# SUPABASE CONFIGURATION
# ========================================
# Required for database and authentication
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ========================================
# BLOCKCHAIN CONFIGURATION
# ========================================
# RPC URLs for different networks
VITE_POLYGON_RPC_URL=https://polygon-rpc.com
VITE_POLYGON_EXPLORER=https://polygonscan.com
VITE_ETHEREUM_RPC=https://eth.llamarpc.com
VITE_BITCOIN_RPC=https://blockstream.info/api
VITE_SOLANA_RPC=https://api.mainnet-beta.solana.com
VITE_TRON_RPC=https://api.trongrid.io
VITE_XRP_RPC=https://s1.ripple.com:51234

# Chain Configuration
VITE_CHAIN_ID=137
VITE_NETWORK=polygon

# ========================================
# BLOCKCHAIN API KEYS
# ========================================
# Alchemy (recommended for Ethereum/Polygon)
VITE_ALCHEMY_API_KEY=your-alchemy-api-key

# Infura (alternative to Alchemy)
VITE_INFURA_API_KEY=your-infura-api-key

# TronGrid API Key
VITE_TRONGRID_API_KEY=your-trongrid-api-key

# Blockstream API Key (optional)
VITE_BLOCKSTREAM_API_KEY=your-blockstream-api-key

# TON Center API Key
VITE_TONCENTER_API_KEY=your-toncenter-api-key

# ========================================
# SMART CONTRACT ADDRESSES
# ========================================
# Deploy contracts first, then add addresses here
VITE_CONTRACT_FEE_CONFIG=0x0000000000000000000000000000000000000000
VITE_CONTRACT_CHARITY_VAULT=0x0000000000000000000000000000000000000000
VITE_CONTRACT_ACADEMY_VAULT=0x0000000000000000000000000000000000000000
VITE_CONTRACT_MINER_NFT=0x0000000000000000000000000000000000000000
VITE_CONTRACT_MARKETPLACE=0x0000000000000000000000000000000000000000
VITE_CONTRACT_REWARDS_MERKLE=0x0000000000000000000000000000000000000000
VITE_CONTRACT_VETYT=0x0000000000000000000000000000000000000000

# ========================================
# TOKEN ADDRESSES
# ========================================
# TYT Token Mint Address (Solana)
VITE_TYT_TOKEN_MINT=your-tyt-token-mint-address

# ========================================
# WALLET CONNECT
# ========================================
# Get your project ID from https://cloud.walletconnect.com
VITE_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# ========================================
# THIRD-PARTY SERVICES
# ========================================
# Ramp Network (Fiat On-Ramp)
VITE_RAMP_HOST_API_KEY=your-ramp-host-api-key

# SumSub (KYC Verification)
VITE_SUMSUB_APP_TOKEN=your-sumsub-app-token

# ========================================
# FEATURE FLAGS
# ========================================
# Enable/disable features
VITE_ENABLE_WEB3_WALLETS=true
VITE_ENABLE_CUSTODIAL_WALLET=true
VITE_ENABLE_KYC=true
VITE_ENABLE_FIAT_ONRAMP=true
VITE_ENABLE_TESTNET_MODE=false

# ========================================
# CROSS-DOMAIN CONFIGURATION
# ========================================
# Domain for foundation site
VITE_FOUNDATION_DOMAIN=https://tyt.foundation
VITE_APP_DOMAIN=https://takeyourtoken.app

# ========================================
# DEVELOPMENT/DEBUG
# ========================================
# Set to 'true' in development
VITE_DEBUG_MODE=false
VITE_ENABLE_LOGS=false

# ========================================
# NOTES
# ========================================
# 1. NEVER commit this file with real values to git
# 2. Use .env.local for local development overrides
# 3. In production, set these via your hosting platform
# 4. Test with testnet first before using mainnet
# 5. Keep API keys secure and rotate regularly
# 6. Monitor API key usage and set up alerts

# ========================================
# SECURITY CHECKLIST
# ========================================
# [ ] .env is in .gitignore
# [ ] No private keys in .env (use secure key management)
# [ ] API keys have rate limits configured
# [ ] Keys are rotated regularly (every 90 days)
# [ ] Monitoring and alerts are set up
# [ ] Testnet keys separate from mainnet keys
# [ ] Backup keys stored securely (not in repository)
